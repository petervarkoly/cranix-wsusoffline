<?xml version="1.0" encoding="UTF-8"?>
<packages:packages xmlns:packages="http://www.wpkg.org/packages" xmlns:wpkg="http://www.wpkg.org/wpkg" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wpkg.org/packages ../../xsd/packages.xsd" >

	<package id="wsusUpdate" name="wsusUpdate" revision="%PKG_VERSION%" reboot="false" priority="1" execute="always">
		<variable name="PKG_VERSION"          value="0" />
		<variable name="PKG_NAME"             value="wsusUpdate" />
		<variable name="BASE_PATH"            value="\\install\itool\swrepository" />

		<!-- Disable Windows Auto Update in Registry ( AUOptions, ScheduledInstallDay, ScheduledInstallTime, IncludeRecommendedUpdates, ElevateNonAdmins, NextDetectionTime )-->
		<install cmd='%systemroot%\System32\reg.exe DELETE "HKLM\SOFTWARE\Microsoft\Windows\CurrentVersion\WindowsUpdate\Auto Update" /va /f'/>

		<!-- start wsusUpdate  -->
		 <install cmd='%COMSPEC% /K pushd "\\install\itool\wsusoffline\client\cmd" &amp;&amp; DoUpdate.cmd /showlog /all&amp;&amp; popd'/> 
		<!-- <install cmd='%COMSPEC% /c \\install\itool\swrepository\wsusUpdate\wsusUpdate.bat'/> -->
	</package>

</packages:packages>
